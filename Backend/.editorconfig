# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[**.{ts,js,json,html}]
indent_size = 4
indent_style = tab
tab_width = 4

[**.html]
resharper_spaces_around_eq_in_pi_attribute = false
resharper_space_before_self_closing = true
resharper_attribute_style = first_attribute_on_single_line
resharper_attribute_indent = single_indent
resharper_linebreaks_inside_tags_for_multiline_elements = true

[**.md]
max_line_length = off
trim_trailing_whitespace = false
